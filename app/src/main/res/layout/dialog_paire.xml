<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/profile_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_paired_first"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/download" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_paired_second"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/download" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="70dp"
                android:background="@drawable/circle_white">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/right_tick" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_paired_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vinod786 &amp; Mohan123"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/profile_paired_msg"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="13dp"

            />


        <Button
            android:id="@+id/btn_paired_send_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="#2196F3"
            android:text="Send Message"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_paired_keep_matching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#00BCD4"
            android:text="Keep Matching"
            android:textColor="@color/colorWhite" />


    </LinearLayout>


</RelativeLayout>